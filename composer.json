{
	"name": "t-hamano/learn-about-theme-json",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Aki Hamano"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "*",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"scripts": {
		"set": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils",
		"lint": "phpcs ./ --standard=./phpcs.ruleset.xml"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
